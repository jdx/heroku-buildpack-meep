#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -ueo pipefail

# shellcheck disable=SC2034
BUILD_DIR=${1:-}
# shellcheck disable=SC2034
CACHE_DIR=${2:-}
# shellcheck disable=SC2034
ENV_DIR=${3:-}

# shellcheck source=stdlib
. ./bin/stdlib
export_env

PATH="$PWD/node-v10.4.0-linux-x64/bin:$PATH"
export NPM_CONFIG_CACHE="$2/npm"
npx jdxcode/meep build "$1" "$2" "$3"

echo "DONE"
